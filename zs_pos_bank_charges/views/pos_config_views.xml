<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="bank_charges_pos_config_inherit" model="ir.ui.view">
            <field name="name">pos.config.form.pos.sale</field>
            <field name="model">pos.config</field>
            <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
            <field name="arch" type="xml">
                <sheet position="inside">
                    <h2>Bank Charges</h2>
                    <div class="row mt16 o_settings_container" id="pos_lock_price_discount">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="bank_charges_product"/>
                                <field name="bank_charges_product"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="bank_charges_percent"/>
                                <field name="bank_charges_percent"/>
                            </div>
                        </div>
                    </div>
                </sheet>
            </field>
        </record>
    </data>
</odoo>