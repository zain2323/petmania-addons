<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_stage_form" model="ir.ui.view">
            <field name="name">res.company.stage.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Company Stage Information" name="ict">
                        <group expand="0" string="">
                            <group expand="0" string="">
                                <field name="stage"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>