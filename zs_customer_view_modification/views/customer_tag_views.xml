<odoo>
    <record id="view_customer_tag_config_tree" model="ir.ui.view">
        <field name="name">customer.tag.config.tree</field>
        <field name="model">customer.tag.config</field>
        <field name="arch" type="xml">
            <tree string="Customer Tag Configurations">
                <field name="name"/>
                <field name="product_category_id" widget="many2many_tags"/>
                <field name="criteria_type"/>
                <field name="threshold_value"/>
                <field name="duration_type"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_tag_config_form" model="ir.ui.view">
        <field name="name">customer.tag.config.form</field>
        <field name="model">customer.tag.config</field>
        <field name="arch" type="xml">
            <form string="Customer Tag Configuration">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="product_category_id" widget="many2many_tags"/>
                        <field name="criteria_type"/>
                        <field name="threshold_value"/>
                        <field name="duration_type"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_customer_tag_config" model="ir.actions.act_window">
        <field name="name">Tag Configurations</field>
        <field name="res_model">customer.tag.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer tag configuration
            </p>
            <p>
                Define thresholds and criteria for customer tags.
            </p>
        </field>
    </record>

    <menuitem id="zs_customer_tag_config" name="Customer Tag Config"
              action="action_customer_tag_config"
              parent="contacts.res_partner_menu_config" sequence="2"/>
</odoo>
