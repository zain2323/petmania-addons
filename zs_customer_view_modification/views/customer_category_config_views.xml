<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Customer Category Configuration Views -->
    <record id="view_customer_category_config_form" model="ir.ui.view">
        <field name="name">customer.category.config.form</field>
        <field name="model">customer.category.config</field>
        <field name="arch" type="xml">
            <form string="Customer Category Configuration">
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="criteria_type"/>
                            <field name="duration_type"/>
                        </group>
                        <group>
                            <field name="active"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Category Thresholds" name="thresholds">
                            <field name="threshold_line_ids">
                                <tree editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="category"/>
                                    <field name="threshold_value"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_customer_category_config_tree" model="ir.ui.view">
        <field name="name">customer.category.config.tree</field>
        <field name="model">customer.category.config</field>
        <field name="arch" type="xml">
            <tree string="Customer Category Configurations">
                <field name="name"/>
                <field name="criteria_type"/>
                <field name="duration_type"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_customer_category_config_search" model="ir.ui.view">
        <field name="name">customer.category.config.search</field>
        <field name="model">customer.category.config</field>
        <field name="arch" type="xml">
            <search string="Search Customer Category Configurations">
                <field name="name"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <group expand="0" string="Group By">
                    <filter string="Criteria Type" name="groupby_criteria" context="{'group_by': 'criteria_type'}"/>
                    <filter string="Duration" name="groupby_duration" context="{'group_by': 'duration_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_customer_category_config" model="ir.actions.act_window">
        <field name="name">Category Configurations</field>
        <field name="res_model">customer.category.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer category configuration
            </p>
            <p>
                Define thresholds and criteria for customer categories.
            </p>
        </field>
    </record>

    <menuitem id="zs_customer_category_config" name="Customer Category Config"
              action="action_customer_category_config"
              parent="contacts.res_partner_menu_config" sequence="1"/>

</odoo>