<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Inter Company" name="ict">
                        <group expand="0" string="">
                            <group expand="0" string="">
                                <field name="stock_replenishment_priority" widget="radio"/>
                            </group>
                            <group expand="0" string="">
                                <field name="distributed_iwt" force_save="1"
                                       attrs="{'invisible':['|',('stock_replenishment_priority','in',['refill_from_intercomapny','do_nothing']),('create_iwt_option','=','manual')],'readonly':[('create_iwt_option','=','stock_plus_interwarehouse')]}"/>
                                <field name="create_ict_option" widget="radio"
                                       attrs="{'invisible':[('stock_replenishment_priority','in',['refill_from_interwarehouse','do_nothing'])]}"/>
                                <field name="create_iwt_option" widget="radio"
                                       attrs="{'invisible':[('stock_replenishment_priority','in',['refill_from_intercomapny','do_nothing'])]}"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>