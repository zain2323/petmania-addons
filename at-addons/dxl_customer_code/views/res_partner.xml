<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_partner_customer_code_form_inherit" model="ir.ui.view">
            <field name="name">res.partner.customer.code.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <field name="vat" position="after">
                    <field name="is_article" />
                    <field name="partner_ntn" />
                    <field name="partner_srtn" />
               </field>
                <xpath expr="//notebook" position="inside">
                    <page string="Client Code">
                        <field name="client_code_ids" widget="many2many" string="Client Code">
                            <tree>
                                <field name="product_id"/>
                                <field name="client_code"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
