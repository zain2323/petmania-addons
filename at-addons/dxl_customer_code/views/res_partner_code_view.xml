<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>  
        <record id="res_partner_code_form_view" model="ir.ui.view">
            <field name="name">res_partner_code_form</field>
            <field name="model">res.partner.code</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="client_code"/>
                            </group>
                            <group>
                                <field name="product_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="res_partner_code_tree_view" model="ir.ui.view">
            <field name="name">res_partner_code_tree</field>
            <field name="model">res.partner.code</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="client_code"/>
                </tree>
            </field>
        </record>

        <record id="action_res_partner_code" model="ir.actions.act_window">
            <field name="name">Partner Code</field>
            <field name="res_model">res.partner.code</field>
            <field name="view_mode">tree,form</field>
            <field name="type">ir.actions.act_window</field>
        </record>

        <menuitem
            id="menu_res_partner_code"
            action="action_res_partner_code"
            name="Partner Code"
            parent="contacts.res_partner_menu_config"
            sequence="8" />
    </data>
</odoo> 
