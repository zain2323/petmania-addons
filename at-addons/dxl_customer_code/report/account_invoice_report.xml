<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="invoice_report_inherit_partner_code" inherit_id="account.report_invoice_document">
        <xpath expr="//th[@name='th_description']" position="before" >
            <th name="th_amount" class="text-left">ISM</th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="before">
            <td>
                <span t-field="line.client_code"/>
            </td>
        </xpath>
    </template>
    <template id="report_invoice_without_salestax_inherit_partner_code" inherit_id="dxl_print_ntn_strn_v15.report_invoice_without_salestax">
        <xpath expr="//th[@name='th_description']" position="before" >
            <th name="th_amount" class="text-left">ISM</th>
        </xpath>
        <xpath expr="//td[@name='account_invoice_line_name']" position="before">
            <td>
                <span t-field="line.client_code"/>
            </td>
        </xpath>
    </template>
</odoo>
