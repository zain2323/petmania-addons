<odoo>
    <data>
        <!-- Wizard Form -->
        <record id="landed_cost_wizard_form_view" model="ir.ui.view">
            <field name="name">landed_cost_wizard_form_view</field>
            <field name="model">landed.cost.report</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report">
                    <group name="group_top">
                        <group name="group_left">
                            <field name="date_from" required="1"/>
                            <field name="date_to" required="1"/>
                            <field name="partner_id"/>
                            <field name="purchase_order_id"/>
                        </group>
                        <group name="group_right">
                            <field name="product_id"/>
                            <field name="product_categ_id"/>
                            <field name="product_brand_id"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                    <footer style="height: 30px !important; border: none !important;">
                        <button name="print_xlsx_report" type="object" string="Print XLSX" class = "oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <!-- Action For Wizard -->
        <record id="landed_cost_report_action" model="ir.actions.act_window">
            <field name="name">Landed Cost Report</field>
            <field name="res_model">landed.cost.report</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="landed_cost_wizard_form_view"/>
            <field name="target">new</field>
        </record>

        <menuitem id="landed_cost_report_menu"
                  name="Purchase Landed Cost Report"
                  parent="purchase.purchase_report_main"
                  sequence="1" action="landed_cost_report_action"
                    groups="purchase_landed_report.landed_user"
        />

    </data>
</odoo>