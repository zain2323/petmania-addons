<?xml version="1.0" encoding="utf-8" ?>

<odoo>
    <data>

        <record id="product_template_form_product_classification_add" model="ir.ui.view">
            <field name="name">product.template.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view" />
            <field name="arch" type="xml">
                <field name="categ_id" position="after">
                    <field name="product_classfication_id" placeholder="Product Classification" />
                </field>
            </field>
        </record>

        <record id="product_classification_action" model="ir.actions.act_window">
            <field name="name">Product Classification</field>
            <field name="res_model">product.classification</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="product_classification_view" model="ir.ui.view">
            <field name="name">Product Classification</field>
            <field name="model">product.classification</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <label for="name" string="Product Classification"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

         <menuitem id="product_classification"
                   name="Product Classification"
                   parent="sale.product_menu_catalog"
                   sequence="4"
                   action="product_classification_action"/>
    </data>
</odoo>