<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_customer_attributes_tree" model="ir.ui.view">
        <field name="name">customer.attributes.tree</field>
        <field name="model">customer.attributes</field>
        <field name="arch" type="xml">
            <tree editable="top">
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="view_customer_attributes_search" model="ir.ui.view">
        <field name="name">customer.attributes.search</field>
        <field name="model">customer.attributes</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record id="view_customer_attributes_action" model="ir.actions.act_window">
        <field name="name">Customer Attributes</field>
        <field name="res_model">customer.attributes</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem id="menu_customer_attributes"
              name="Customer Attributes"
              parent="sale.menu_sale_config"
              action="zs_customer_attributes.view_customer_attributes_action"
              sequence="14"
    />

</odoo>
