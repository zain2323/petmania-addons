<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <record id="view_inventory_analysis_report_data_tree" model="ir.ui.view">
        <field name="name">inventory.analysis.report.data.tree</field>
        <field name="model">inventory.analysis.report.warehouse.line</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Inventory Analysis Report" create="0" edit="0" delete="0" duplicate="0">
                <field name="product_brand"/>
                <field name="product_id"/>
                <field name="warehouse_id"/>
                <field name="scm_category"/>
                <field name="onhand_quantity"/>
                <field name="total_sales"/>
                <field name="avg_daily_sales"/>
                <field name="weight"/>
            </tree>
        </field>
    </record>
    
    <record id="view_inventory_analysis_report_data_pivot" model="ir.ui.view">
        <field name="name">inventory.analysis.report.data.pivot</field>
        <field name="model">inventory.analysis.report.warehouse.line</field>
        <field name="type">pivot</field>
        <field name="arch" type="xml">
            <pivot string="Inventory Analysis Report">
                <field name="product_line_id" type="row" string="Product"/>
                <field name="warehouse_id" type="col" string="Warehouse"/>

                <field name="onhand_quantity" type="measure" string="Stock"/>
                <field name="avg_daily_sales" type="measure" string="Avg Daily Sales"/>
                <field name="weight" type="measure" string="Weight"/>
            </pivot>
        </field>
    </record>

    <record id="view_inventory_analysis_report_data_search" model="ir.ui.view">
        <field name="name">inventory.analysis.report.data.search</field>
        <field name="model">inventory.analysis.report.warehouse.line</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search string="Inventory Analysis Report">
                <field name="product_brand" string="Product Brand" domain="[('name','ilike',self)]"/>
                <field name="product_id" string="Product" domain="['|', '|', ('default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <field name="warehouse_id" string="Warehouse" domain="[('name','ilike',self)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Product Brand" name="product_brand_group" domain="[]" context="{'group_by': 'product_brand'}"/>
                    <filter string="Product" name="product_group" domain="[]" context="{'group_by': 'product_id'}"/>
                    <filter string="Warehouse" name="warehouse_group" domain="[]" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="SCM Category" name="scm_category_group" domain="[]" context="{'group_by': 'scm_category'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="action_inventory_analysis_report_warehouse_line" model="ir.actions.act_window">
        <field name="name">Inventory Analysis Report</field>
        <field name="res_model">inventory.analysis.report.warehouse.line</field>
        <field name="view_mode">tree,pivot</field>
        <field name="view_id" ref="view_inventory_analysis_report_data_tree"/>
        <field name="search_view_id" ref="view_inventory_analysis_report_data_search"/>
        <field name="context">{'search_default_product_group': 1, 'search_default_warehouse_group': 1}</field>
        <field name="target">current</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Records
            </p>
        </field>
    </record>

    <record id="action_tree_view_inventory_analysis_report_warehouse_line" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_inventory_analysis_report_warehouse_line"/>
        <field name="sequence" eval="1"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="view_inventory_analysis_report_data_tree"/>
    </record>
    <record id="action_pivot_view_inventory_analysis_report_warehouse_line" model="ir.actions.act_window.view">
        <field name="act_window_id" ref="action_inventory_analysis_report_warehouse_line"/>
        <field name="sequence" eval="5"/>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_inventory_analysis_report_data_pivot"/>
    </record>


</odoo>