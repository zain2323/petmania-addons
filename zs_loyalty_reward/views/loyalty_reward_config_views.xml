<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_reward_config_tree" model="ir.ui.view">
        <field name="name">loyalty.reward.config.tree</field>
        <field name="model">loyalty.reward.config</field>
        <field name="arch" type="xml">
            <tree>
                <field name="product_id"/>
                <field name="purchase_count"/>
                <field name="validity_days"/>
            </tree>
        </field>
    </record>

    <record id="loyalty_reward_config_form" model="ir.ui.view">
        <field name="name">loyalty.reward.config.form</field>
        <field name="model">loyalty.reward.config</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Product Details">
                            <field name="product_id"
                                   domain="[('sale_ok', '=', True)]"
                                   options="{'no_create': True}"/>
                        </group>
                        <group string="Reward Configuration">
                            <field name="purchase_count"/>
                            <field name="validity_days"/>
                            <field name="last_date_to_enter"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loyalty_reward_config_search" model="ir.ui.view">
        <field name="name">loyalty.reward.config.search</field>
        <field name="model">loyalty.reward.config</field>
        <field name="arch" type="xml">
            <search>
                <field name="product_id"/>
                <group expand="0" string="Group By">
                    <filter string="Product" name="group_by_product" context="{'group_by': 'product_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_loyalty_reward_config" model="ir.actions.act_window">
        <field name="name">Loyalty Reward Configurations</field>
        <field name="res_model">loyalty.reward.config</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first customer loyalty reward configuration
            </p>
            <p>
                Define which products are eligible for loyalty rewards
            </p>
        </field>
    </record>

    <menuitem id="loyalty_reward_config_menu" name="Loyalty Reward Config"
              action="action_loyalty_reward_config"
              parent="contacts.res_partner_menu_config" sequence="3"/>

</odoo>