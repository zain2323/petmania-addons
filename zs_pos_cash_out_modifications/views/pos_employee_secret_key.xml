<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Employee Secret Key Form View -->
    <record id="view_employee_secret_key_form" model="ir.ui.view">
        <field name="name">pos.employee.secret.key.form</field>
        <field name="model">pos.employee.secret.key</field>
        <field name="arch" type="xml">
            <form string="Employee Secret Key">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="secret_key" password="True"/>
                    </group>
                    <group string="extra info">
                        <field name="active"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Employee Secret Key Tree View -->
    <record id="view_employee_secret_key_tree" model="ir.ui.view">
        <field name="name">pos.employee.secret.key.tree</field>
        <field name="model">pos.employee.secret.key</field>
        <field name="arch" type="xml">
            <tree string="Employee Secret Keys">
                <field name="name"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Employee Secret Key Search View -->
    <record id="view_employee_secret_key_search" model="ir.ui.view">
        <field name="name">pos.employee.secret.key.search</field>
        <field name="model">pos.employee.secret.key</field>
        <field name="arch" type="xml">
            <search string="Search Employee Secret Keys">
                <field name="name"/>
                <field name="secret_key"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Employee Secret Key Action -->
    <record id="action_employee_secret_key" model="ir.actions.act_window">
        <field name="name">Employee Secret Keys</field>
        <field name="res_model">pos.employee.secret.key</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first employee secret key
            </p>
            <p>
                Define employee secret keys to track cashier activities in POS.
            </p>
        </field>
    </record>


    <menuitem id="menu_employee_secret_keys"
              name="Employee Secret Keys"
              parent="point_of_sale.menu_point_root"
              action="action_employee_secret_key"
              sequence="30"/>
</odoo>