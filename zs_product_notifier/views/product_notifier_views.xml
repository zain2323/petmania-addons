<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_product_notifier_config_form" model="ir.ui.view">
        <field name="name">product.notifier.config.form</field>
        <field name="model">product.notifier.config</field>
        <field name="arch" type="xml">
            <form string="Product Notification Configuration">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Configuration Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="notification_email" placeholder="example@company.com"/>
                        <field name="active"/>
                    </group>
                    <group string="Notification Settings">
                        <field name="notify_on_archive"/>
                        <field name="notify_on_create"/>
                        <field name="notify_on_unlink"/>
                        <field name="notify_on_price_change"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_product_notifier_config_tree" model="ir.ui.view">
        <field name="name">product.notifier.config.tree</field>
        <field name="model">product.notifier.config</field>
        <field name="arch" type="xml">
            <tree string="Product Notification Configurations">
                <field name="name"/>
                <field name="notification_email"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_product_notifier_config_search" model="ir.ui.view">
        <field name="name">product.notifier.config.search</field>
        <field name="model">product.notifier.config</field>
        <field name="arch" type="xml">
            <search string="Search Product Notification Configurations">
                <field name="name"/>
                <field name="notification_email"/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Inactive" name="inactive" domain="[('active','=',False)]"/>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_product_notifier_config" model="ir.actions.act_window">
        <field name="name">Product Change Notifications</field>
        <field name="res_model">product.notifier.config</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first notification configuration!
            </p>
            <p>
                Define email addresses to notify when product data changes.
            </p>
        </field>
    </record>

    <!-- Menu Item -->
    <menuitem id="menu_product_notifier_config"
              name="Change Notifications"
              parent="stock.menu_product_in_config_stock"
              action="action_product_notifier_config"
              sequence="20"/>
</odoo>